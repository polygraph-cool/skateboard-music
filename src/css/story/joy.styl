#scroll
    position relative
    overflow hidden
    margin 0 auto
    border none
    width 100%
    padding-bottom 2rem
    .scroll__graphic
      width 100%
      height 100vh
      top 0
      left 0
      position absolute
      overflow hidden
      transform translate3d(0,0,0)
      bottom auto
      @media (max-width: 950px)
        &:before
          margin-left auto
        .chart
          margin 0px
          width 100%

      &:before
        content 'Skateboard Music by Genre'
        position absolute
        left 0px
        right 0px
        top 20px
        margin 0 auto
        margin-left 40%
        text-align center
        font-family 'Atlas Grotesk Web'
        font-weight 600
        font-size 16px
        text-transform uppercase
      .chart
        position absolute
        width 60%
        background black
        top 50%
        transform translateY(-50%)
        margin 0 auto
        margin-left 40%
        svg
          overflow visible
          display block
          position relative
          .maskTracker
            visibility hidden
          .maskRect
            fill orange
            fill-opacity .3
          .maskLine
            fill black
            stroke orange
            stroke-width 1px
            stroke-opacity .5
            shape-rendering crispEdges
            opacity 1
            transition opacity .2s
            @media (max-width: 950px)
              stroke-width 15px
          .axis--x
            .tick
              line
                stroke white
              text
                font-size .8rem
                font-family 'Atlas Grotesk Web'
                fill white
                font-weight 600
                fill rgba(255,255,255,.7)
          .activities
            font-family 'Atlas Grotesk Web'
            .activity
              .percent-annotation
                font-size 11px
                fill #ccc
                @media (max-width: 950px)
                  font-size 13px
                  @media (max-width: 400px)
                    font-size 12px
              .line
                stroke-width 1.5px
              .line-bottom
                stroke rgba(204, 204, 204, 0.5098039215686274)
                shape-rendering crispEdges
                stroke-dasharray 2,2
              text
                font-size 12px
                font-weight 600
                text-transform uppercase
                @media (max-width: 400px)
                  font-size 11px
                  letter-spacing 0px
                  text-transform capitalize
          .axis--activity
            .tick
              text
                font-size .8rem
                font-family 'Atlas Grotesk Web'
                fill rgba(0,0,0,.8)
    .scroll__text
      position relative
      width 25%
      margin-left 10%
      @media (max-width: 950px)
        width 100%
        margin 0 auto
        padding-top 90vh
        .step
          width 90%
          margin 0 auto
          margin-bottom 100vh
          background rgba(0,0,0,.8)
          border-bottom 1px solid white
      .step
        margin-bottom 30rem
        h4
          font-family 'Atlas Grotesk Web'
          text-align left
          font-weight 600
          font-size 1.2rem
        p
          text-align left
          font-size 1rem
          font-family 'Atlas Grotesk Web'
          line-height 1.8
    .is-fixed
      position fixed
    .is-bottom
        bottom 0
        top auto



.axis .domain {
    display: none;
}

.axis--x line {
    stroke: #aaa;
}

.axis--activity .tick line {
    display: none;
}



.axis--activity .tick:nth-child(odd) text {
    fill: #222;
    fill: white;
}

.line {
    fill: none;
